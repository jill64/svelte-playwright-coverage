{
  "name": "svelte-playwright-coverage",
  "description": "",
  "version": "",
  "type": "module",
  "bin": {
    "spc": "./dist/src/bin/index.js"
  },
  "files": [
    "dist",
    "!**/*.test.ts"
  ],
  "exports": {
    "./test": {
      "types": "./dist/src/test/index.d.ts",
      "default": "./dist/src/test/index.js"
    },
    "./vite": {
      "types": "./dist/src/vite/index.d.ts",
      "default": "./dist/src/vite/index.js"
    },
    "./spc": {
      "types": "./dist/src/spc/index.d.ts",
      "default": "./dist/src/spc/index.js"
    },
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "dev": "cd demo && pnpm dev",
    "build": "pnpm build:lib && pnpm build:demo && npx publint",
    "build:lib": "tsc",
    "build:demo": "cd demo && pnpm build",
    "preview": "pnpm build:lib && cd demo && pnpm preview",
    "prepack": "pnpm build:lib",
    "lint": "pnpm build:lib && pnpm lint:lib && pnpm lint:demo",
    "lint:lib": "npx eslint .",
    "lint:demo": "cd demo && pnpm lint",
    "format": "pnpm format:lib && pnpm format:demo",
    "format:lib": "npx prettier -w .",
    "format:demo": "cd demo && pnpm format",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "npx tsx src/bin/index.ts --logLevel debug npm run test:e2e"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.0.0",
    "vite": "^5.0.0"
  },
  "prettier": "@jill64/prettier-config",
  "devDependencies": {
    "@jill64/eslint-config-ts": "1.0.6",
    "@jill64/playwright-config": "2.2.0",
    "@jill64/prettier-config": "1.0.0",
    "@playwright/test": "1.40.1",
    "@types/cli-spinner": "0.2.3",
    "@sveltejs/kit": "2.0.3",
    "@types/node": "20.10.5",
    "svelte": "4.2.8",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vitest": "1.0.4"
  },
  "dependencies": {
    "cli-spinner": "0.2.10",
    "kleur": "4.1.5"
  }
}
